@model ProjectFutureAdvannced.ViewModels.AdminViewModel.ListOfInfoAdmin
@{
    Layout = "~/Views/Shared/_LayoutDash.cshtml";
}
<div class="profiles">
    <div class="container">
        <div class="boxPorfile d-flex w-100">
            <div class="boxPorfile1">
                <div class="account mb-4 p-4 d-flex justify-content-center align-items-center flex-column">
                    <div class="imgaccount">
                        <img src="~/AccountImg/img_avatar.png" />
                    </div>
                    <div class="infoAccount text-center">
                        <h3>Name</h3>
                        <p></p>
                    </div>
                </div>
                <div class="list-group">
                    <a class="list-group-item list-group-item-action"> <i class="fas fa-fw fa-user"></i> General Information</a>
                    <a class="list-group-item list-group-item-action"><i class="fa fa-user-secret" aria-hidden="true"></i> Security Information</a>
                    <a class="list-group-item list-group-item-action">
                        <i class="fa fa-key" aria-hidden="true"></i> Rest Password
                    </a>
                    <a class="list-group-item list-group-item-action">
                        <i class="fa fa-external-link" aria-hidden="true"></i> Log Out
                    </a>
                </div>
            </div>
            <form class="boxPorfile2" asp-action="GeneralAdmin" asp-controller="Admin" enctype="multipart/form-data" method="post">
                <div class="row BasicInfo mb-5">
                    <h6 class="col-12">GENERAL INFORMATION</h6>
                    <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                        <label class="form-label" asp-for="GeneralInfoAdmin.Name">Name</label>
                        <input type="text" class="form-control" asp-for="GeneralInfoAdmin.Name">
                        <span class="text-danger" asp-validation-for="GeneralInfoAdmin.Name"></span>
                    </div>
                    <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                        <label class="form-label" asp-for="GeneralInfoAdmin.Email">Email Address</label>
                        <input type="email" class="form-control" asp-for="GeneralInfoAdmin.Email">
                        <span class="text-danger" asp-validation-for="GeneralInfoAdmin.Email"></span>
                    </div>
                    <div class="mb-3 gap-3 col-md-6 col-sm-12">
                        <label class="form-label" asp-for="GeneralInfoAdmin.Gender">Gender</label>
                        <div class="d-flex" style="gap:20px">
                            <div class="form-check">
                                <input class="form-check-input d-flex justify-content-center align-items-center" asp-for="GeneralInfoAdmin.Gender" type="radio" value="Male" id="flexRadioDefault1">
                                <label class="form-check-label" asp-for="GeneralInfoAdmin.Gender" for="flexRadioDefault1">
                                    Male
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input d-flex justify-content-center align-items-center" type="radio" asp-for="GeneralInfoAdmin.Gender" value="Female" id="flexRadioDefault2">
                                <label class="form-check-label" for="flexRadioDefault2" asp-for="GeneralInfoAdmin.Gender">
                                    Female
                                </label>
                                <span class="text-danger" asp-validation-for="GeneralInfoAdmin.Gender"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                        <label class="form-label" asp-for="GeneralInfoAdmin.PhoneNumber">PhoneNumber</label>
                        <input type="text" class="form-control" asp-for="GeneralInfoAdmin.PhoneNumber">
                        <span class="text-danger" asp-validation-for="GeneralInfoAdmin.PhoneNumber"></span>
                    </div>
                
                    <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                        <label for="custom-file-input" class="form-label" asp-for="GeneralInfoAdmin.ImgUser">Your Image</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Upload</span>
                            </div>
                            <div class="custom-file">
                                <input asp-for="GeneralInfoAdmin.ImgUser" type="file" class="custom-file-input" id="inputGroupFile01">
                                <label asp-for="GeneralInfoAdmin.ImgUser" class="custom-file-label" for="inputGroupFile01">Choose file</label>
                            </div>
                        </div>
                        <span class="text-danger" asp-validation-for="GeneralInfoAdmin.ImgUser"></span>
                    </div>
                    <div class="mb-3 col-lg-6 col-md-6 col-sm-12">
                        <label class="form-label" asp-for="GeneralInfoAdmin.Birthday">Birthday</label>
                        <input type="date" class="form-control" asp-for="GeneralInfoAdmin.Birthday">
                        <span class="text-danger" asp-validation-for="GeneralInfoAdmin.Birthday"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Save Information</button>
            </form>

        </div>
    </div>
</div>